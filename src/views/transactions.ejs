<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Budgets</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>

<nav class="navbar">
    <div class="container">
        <a href="/" class="navbar-brand">BudgetApp</a>
        <ul class="navbar-nav">
            <li><a href="/budgets">Budgets</a></li>
            <li><a href="/transactions">Transactions</a></li>
            <li><a href="/categories">Categories</a></li>
            <li><a href="/profile">Profile</a></li>
            <li class="navbar-logout"><a href="/logout" class="btn btn-secondary">Log Out</a></li>
        </ul>
    </div>
</nav>

<div class="container">
    <h1 class="page-title">Transactions</h1>
    
    <ul class="transaction-list">
        <% transactions.forEach(transaction => { %>
            <li class="transaction-item">
                <p><strong>Account:</strong> <%= transaction.account %></p>
                <p><strong>Description:</strong> <%= transaction.description %></p>
                <p><strong>Category:</strong> <%= transaction.categoryName || 'No category' %></p>
                <p><strong>Amount:</strong> <%= transaction.amount %></p>
                <p><strong>Date and Time:</strong> <%= transaction.datetime %></p>
                <p><strong>Type:</strong> <%= transaction.type %></p>
                <div class="transaction-actions">
                    <form action="/transactions/delete/<%= transaction._id %>" method="POST" class="delete-form">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                    <a href="/transactions/edit/<%= transaction._id %>" class="btn btn-secondary">Edit</a>
                </div>
            </li>
        <% }); %>
    </ul>

    <div class="create-transaction">
        <form action="/transactions/new" method="GET" class="create-form">
            <button type="submit" class="btn btn-primary">Create New Transaction</button>
        </form>
    </div>
</div>

</body>
</html>
