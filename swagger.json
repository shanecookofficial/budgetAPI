{
  "swagger": "2.0",
  "info": {
    "title": "Budget Management API",
    "description": "API for managing user profiles, transactions, budgets, and categories.",
    "version": "1.0.0"
  },
  "host": "localhost:3000",
  "basePath": "/",
  "schemes": ["http"],
  "paths": {
    "/auth/google": {
      "get": {
        "summary": "Google OAuth login",
        "description": "Redirects to Google for authentication.",
        "responses": {
          "302": {
            "description": "Redirects to Google's OAuth service"
          }
        }
      }
    },
    "/auth/google/callback": {
      "get": {
        "summary": "Google OAuth callback",
        "description": "Handles the callback from Google after authentication.",
        "responses": {
          "302": {
            "description": "Redirects to home on successful authentication"
          },
          "401": {
            "description": "Authentication failed"
          }
        }
      }
    },
    "/logout": {
      "get": {
        "summary": "Logout",
        "description": "Logs the user out and destroys the session.",
        "responses": {
          "302": {
            "description": "Redirects to the root"
          }
        }
      }
    },
    "/home": {
      "get": {
        "summary": "Home Page",
        "description": "Renders the home page for logged-in users.",
        "responses": {
          "200": {
            "description": "Home page content"
          },
          "302": {
            "description": "Redirects to login if not authenticated"
          }
        }
      }
    },
    "/profile": {
      "get": {
        "summary": "User Profile",
        "description": "Displays the user's profile.",
        "responses": {
          "200": {
            "description": "Profile page content"
          },
          "302": {
            "description": "Redirects to login if not authenticated"
          }
        }
      },
      "post": {
        "summary": "Update Profile",
        "description": "Updates the user's profile information.",
        "parameters": [
          {
            "in": "body",
            "name": "preferredName",
            "description": "The user's preferred name to update",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "preferredName": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "responses": {
          "302": {
            "description": "Redirects to the profile page"
          },
          "401": {
            "description": "Unauthorized if not logged in"
          }
        }
      }
    },
    "/categories": {
      "get": {
        "summary": "List Categories",
        "description": "Lists all categories belonging to the user.",
        "responses": {
          "200": {
            "description": "An array of categories"
          },
          "302": {
            "description": "Redirects to login if not authenticated"
          }
        }
      },
      "post": {
        "summary": "Create Category",
        "description": "Creates a new category.",
        "parameters": [
          {
            "in": "body",
            "name": "category",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "description": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Category created"
          },
          "401": {
            "description": "Unauthorized if not logged in"
          }
        }
      }
    },
    "/categories/{id}": {
      "put": {
        "summary": "Update Category",
        "description": "Updates a specific category.",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "type": "string",
            "description": "Category ID"
          },
          {
            "in": "body",
            "name": "category",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "description": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Category updated"
          },
          "401": {
            "description": "Unauthorized if not logged in"
          }
        }
      },
      "delete": {
        "summary": "Delete Category",
        "description": "Deletes a specific category.",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "type": "string",
            "description": "Category ID"
          }
        ],
        "responses": {
          "204": {
            "description": "Category deleted"
          },
          "401": {
            "description": "Unauthorized if not logged in"
          }
        }
      }
    },
    "/transactions": {
      "get": {
        "summary": "List Transactions",
        "description": "Lists all transactions belonging to the user.",
        "responses": {
          "200": {
            "description": "An array of transactions"
          },
          "302": {
            "description": "Redirects to login if not authenticated"
          }
        }
      },
      "post": {
        "summary": "Create Transaction",
        "description": "Creates a new transaction.",
        "parameters": [
          {
            "in": "body",
            "name": "transaction",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "account": {
                  "type": "string"
                },
                "description": {
                  "type": "string"
                },
                "categoryId": {
                  "type": "string"
                },
                "amount": {
                  "type": "number",
                  "format": "float"
                },
                "datetime": {
                  "type": "string",
                  "format": "date-time"
                },
                "type": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Transaction created"
          },
          "401": {
            "description": "Unauthorized if not logged in"
          }
        }
      }
    },
    "/transactions/{id}": {
      "put": {
        "summary": "Update Transaction",
        "description": "Updates a specific transaction.",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "type": "string",
            "description": "Transaction ID"
          },
          {
            "in": "body",
            "name": "transaction",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "account": {
                  "type": "string"
                },
                "description": {
                  "type": "string"
                },
                "categoryId": {
                  "type": "string"
                },
                "amount": {
                  "type": "number",
                  "format": "float"
                },
                "datetime": {
                  "type": "string",
                  "format": "date-time"
                },
                "type": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Transaction updated"
          },
          "401": {
            "description": "Unauthorized if not logged in"
          }
        }
      },
      "delete": {
        "summary": "Delete Transaction",
        "description": "Deletes a specific transaction.",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "type": "string",
            "description": "Transaction ID"
          }
        ],
        "responses": {
          "204": {
            "description": "Transaction deleted"
          },
          "401": {
            "description": "Unauthorized if not logged in"
          }
        }
      }
    },
    "/budgets": {
      "get": {
        "summary": "List Budgets",
        "description": "Lists all budgets for the user.",
        "responses": {
          "200": {
            "description": "An array of budgets"
          },
          "302": {
            "description": "Redirects to login if not authenticated"
          }
        }
      },
      "post": {
        "summary": "Create Budget",
        "description": "Creates a new budget for the user.",
        "parameters": [
          {
            "in": "body",
            "name": "budget",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "category": {
                  "type": "string"
                },
                "startDate": {
                  "type": "string",
                  "format": "date"
                },
                "endDate": {
                  "type": "string",
                  "format": "date"
                },
                "amount": {
                  "type": "number",
                  "format": "float"
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Budget created"
          },
          "401": {
            "description": "Unauthorized if not logged in"
          }
        }
      }
    },
    "/budgets/{id}": {
      "delete": {
        "summary": "Delete Budget",
        "description": "Deletes a specific budget.",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "type": "string",
            "description": "Budget ID"
          }
        ],
        "responses": {
          "204": {
            "description": "Budget deleted"
          },
          "401": {
            "description": "Unauthorized if not logged in"
          }
        }
      }
    }
  }
}
